<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vladislav.mobilelab3">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application android:name="com.example.igor.utils.DataBaseApp" android:allowBackup="true"
        android:icon="@mipmap/ic_launcher" android:label="@string/app_name"
        android:supportsRtl="true" android:theme="@style/AppTheme">
        <activity android:name="com.example.igor.activity.MainActivity"
            android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.igor.activity.RecordActivity"
            android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true" />
        <activity android:name="com.example.igor.activity.CameraActivity"
            android:label="@string/app_name" android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true" />

    </application>

</manifest>